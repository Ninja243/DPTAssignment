<ViewScreen>:
	GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "View Student Applicants"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]
	    BoxLayout:
			orientation: "vertical"
	        height: "60dp"
			elevation: 15
	        size_hint_y: None
			rows: 2
			BoxLayout:
				orientation: "horizontal"
				TextInput:
				    size_hint_x: 20
					id: searchbar
					multiline: False
				Button:
					text: "Search"
					id: searchButton
					on_release: root.runSearch()
					size_hint_x: 3
			ScrollView:
				orientation: "vertical"
				do_scroll_x: False
				size_hint: 0.5, 1
				BoxLayout:
					id: studentResult
					orientation: "vertical"
					
